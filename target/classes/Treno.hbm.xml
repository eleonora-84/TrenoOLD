<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "treno.Treno" table = "treno">
      
      <meta attribute = "class-description">
         Classe treno
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "motrice" column = "motrice_id" type="int"/>
      <list name = "listaVagoni" cascade="all">
         <key column = "vagoni_id"/>
         <list-index column = "vagone_id"/> <!-- mi serve per l'ordinamento della lista -->
         <one-to-many class="vagoni.Vagone"/>
      </list>
   </class>
</hibernate-mapping>