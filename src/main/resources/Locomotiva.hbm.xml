<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "vagoni.Locomotiva" table = "locomotiva">
      
      <meta attribute = "class-description">
         Classe locomotiva
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="increment"/>
      </id>
      
      <property name = "massaTrainata" column = "massa_trainata" type="double"/>
      <property name = "peso" column = "peso" type="double"/>
      <many-to-one name="treno" column="treno_id" class="treno.Treno" unique="true"></many-to-one>
   </class>
</hibernate-mapping>